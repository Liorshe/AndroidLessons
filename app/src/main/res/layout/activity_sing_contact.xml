<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#e8e7e3"
        tools:context=".ContactRecyclerAdapterActivity">


    <TextView
            android:id="@+id/namecontact"
            android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="name:"
              android:textSize="30sp"
              android:textColor="@android:color/black"
              android:layout_margin="16dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
    />

    <TextView
            android:id="@+id/namecontact1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="name"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            android:layout_margin="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/namecontact"

    />

    <TextView
            android:id="@+id/numbercontact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="number:"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/namecontact"
            app:layout_constraintLeft_toLeftOf="parent"
    />
.
    <TextView
            android:id="@+id/numbercontact1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="number"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/namecontact"
            app:layout_constraintLeft_toRightOf="@id/numbercontact"
    />

    <ImageView
            android:id="@+id/callbtn"
            android:layout_width="100dp"
               android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    />


</androidx.constraintlayout.widget.ConstraintLayout>